<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/zzz_activity_width"
    android:layout_height="@dimen/zzz_activity_height"
    android:orientation="vertical">

    <include
        android:id="@+id/zzz_title"
        layout="@layout/zzz_common_title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zzz_dialog_content_shape">

        <ImageView
            android:id="@+id/zzz_user_icon"
            android:layout_width="@dimen/zzz_single_usercenter_icon_width"
            android:layout_height="@dimen/zzz_single_usercenter_icon_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/zzz_mine_icon_margin_top"
            android:background="@drawable/zzz_user_icon"/>


        <RelativeLayout
            android:id="@+id/zzz_user_name_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zzz_user_icon"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/zzz_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zzz_mine_user_account_margin_top"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/zzz_mine_user_info_text_color"
                android:textSize="@dimen/zzz_mine_user_info_text_size" />

            <ImageView
                android:id="@+id/zzz_modify_cellphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/zzz_user_name"
                android:layout_marginLeft="@dimen/zzz_modify_cellphone_padding"
                android:layout_toRightOf="@+id/zzz_user_name"
                android:src="@drawable/zzz_modify_cellphone" />
        </RelativeLayout>


        <View
            android:id="@+id/zzz_personal_center_seperate_line"
            android:layout_width="@dimen/zzz_mine_line_width"
            android:layout_height="@dimen/zzz_one_dip"
            android:layout_below="@+id/zzz_user_name_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/zzz_personal_center_seperate_line_margin_top"
            android:background="@color/zzz_seperate_line_color"/>

        <LinearLayout
            android:id="@+id/zzz_personal_center_welfare"
            android:layout_width="@dimen/zzz_mine_service_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zzz_personal_center_seperate_line"
            android:layout_marginTop="@dimen/zzz_personal_center_event_margin_top"
            android:layout_toLeftOf="@+id/zzz_personal_center_event"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:layout_width="@dimen/zzz_service_img_size"
                       android:layout_height="@dimen/zzz_service_img_size"
                       android:src="@drawable/zzz_personal_center_welfare"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/zzz_mine_service_text_margin"
                      android:text="@string/zzz_personal_center_welfare"
                      android:textColor="@color/zzz_mine_service_text_color"
                      android:textSize="@dimen/zzz_mine_service_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zzz_personal_center_event"
            android:layout_width="@dimen/zzz_mine_service_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zzz_personal_center_seperate_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/zzz_personal_center_event_margin_top"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:layout_width="@dimen/zzz_service_img_size"
                       android:layout_height="@dimen/zzz_service_img_size"
                       android:src="@drawable/zzz_personal_center_event"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/zzz_mine_service_text_margin"
                      android:text="@string/zzz_personal_center_event"
                      android:textColor="@color/zzz_mine_service_text_color"
                      android:textSize="@dimen/zzz_mine_service_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zzz_personal_center_customer_service"
            android:layout_width="@dimen/zzz_mine_service_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zzz_personal_center_seperate_line"
            android:layout_marginTop="@dimen/zzz_personal_center_event_margin_top"
            android:layout_toRightOf="@+id/zzz_personal_center_event"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView android:layout_width="@dimen/zzz_service_img_size"
                       android:layout_height="@dimen/zzz_service_img_size"
                       android:src="@drawable/zzz_personal_center_customer_service"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/zzz_mine_service_text_margin"
                      android:text="@string/zzz_personal_center_customer_service"
                      android:textColor="@color/zzz_mine_service_text_color"
                      android:textSize="@dimen/zzz_mine_service_text_size"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
