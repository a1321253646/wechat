<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gn_account_defalut_action_bar_color"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/custom_actionbar_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gn_action_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/gn_account_amigo_ic_ab_back_light" />

        <TextView
            android:id="@+id/gn_action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/gn_action_bar_back"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gn_account_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gn_action_bar_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:text="@string/gn_account_change_account"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gn_account_white"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>