<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/zzz_local_page_bg">

    <RelativeLayout
        android:id="@+id/zzz_giftcontent_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zzz_white"
        android:paddingRight="@dimen/zzz_giftdetail_padding_leftright"
        android:paddingLeft="@dimen/zzz_giftdetail_padding_leftright"
        android:paddingTop="@dimen/zzz_giftdetail_padding_top">

        <TextView
            android:id="@+id/zzz_giftcontent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zzz_main_green"
            android:textSize="@dimen/zzz_gift_item_name_text_size"/>

        <TextView
            android:id="@+id/zzz_giftcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/zzz_giftcontent_title"
            android:layout_below="@id/zzz_giftcontent_title"
            android:layout_marginTop="@dimen/zzz_gift_content_margin_top"
            android:lineSpacingExtra="@dimen/zzz_gift_content_line_space"
            android:textColor="@color/zzz_gifttext_gray"
            android:textSize="@dimen/zzz_gift_item_time_text_size"/>


        <View
            android:layout_below="@+id/zzz_giftcontent"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zzz_one_pixel"
            android:layout_marginTop="@dimen/zzz_giftdetail_padding_bottom"
            android:background="@color/zzz_game_normal_item_line_background"/>

    </RelativeLayout>


</RelativeLayout>