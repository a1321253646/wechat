<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zzz_user_info_item_title_margin_top">


        <ImageView
            android:id="@+id/zzz_user_info_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zzz_user_info_item_layout_margin"
            android:contentDescription="@string/zzz_a_coin"/>

        <TextView
            android:id="@+id/zzz_user_info_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/zzz_user_info_item_text_margin"
            android:layout_toRightOf="@+id/zzz_user_info_item_img"
            android:textColor="@color/zzz_user_info_title_color"
            android:textSize="@dimen/zzz_user_info_item_title_size"/>

        <ImageView
            android:id="@+id/zzz_user_info_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/zzz_user_info_item_arrow_margin_right"
            android:src="@drawable/zzz_user_info_item_indicate"/>

        <ImageView
            android:id="@+id/zzz_item_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/zzz_user_info_item_arrow"
            android:layout_marginRight="@dimen/zzz_user_info_margin_horiz"
            android:src="@drawable/zzz_hint"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/zzz_user_info_item_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zzz_user_info_item_layout_margin"
        android:layout_marginTop="@dimen/zzz_user_info_item_layout_margin"
        android:singleLine="true"
        android:maxEms="8"
        android:ellipsize="end"
        android:textColor="@color/zzz_user_info_color"
        android:textSize="@dimen/zzz_user_info_text_size"/>

    <TextView
        android:id="@+id/zzz_user_info_item_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zzz_user_info_item_layout_margin"
        android:layout_marginTop="@dimen/zzz_user_info_item_margin_top"
        android:singleLine="true"
        android:maxEms="8"
        android:ellipsize="end"
        android:textColor="@color/zzz_user_info_color"
        android:textSize="@dimen/zzz_user_info_text_size"/>

    <TextView
        android:id="@+id/zzz_user_info_item_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zzz_user_info_item_layout_margin"
        android:layout_marginTop="@dimen/zzz_user_info_item_margin_top"
        android:singleLine="true"
        android:maxEms="8"
        android:ellipsize="end"
        android:textColor="@color/zzz_user_info_color"
        android:textSize="@dimen/zzz_user_info_text_size"/>
</merge>
