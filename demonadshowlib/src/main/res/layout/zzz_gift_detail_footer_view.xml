<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/zzz_gift_content_background_color">

    <RelativeLayout
        android:id="@+id/zzz_gift_activation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zzz_gift_content_background_color"
        android:paddingBottom="@dimen/zzz_giftdetailkey_padding_bottom"
        android:paddingLeft="@dimen/zzz_giftdetailkey_padding_left"
        android:paddingRight="@dimen/zzz_giftdetailkey_padding_right"
        android:paddingTop="@dimen/zzz_giftdetailkey_padding_top"
        android:visibility="gone">

        <TextView
            android:id="@+id/zzz_activation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/zzz_gift_activation"
            android:textColor="@color/zzz_gifttext_gray"
            android:textSize="@dimen/zzz_gift_item_key_text_size"/>

        <Button
            android:id="@+id/zzz_activation_key_copy"
            android:layout_width="@dimen/zzz_gift_detail_activation_key_copy_width"
            android:layout_height="@dimen/zzz_gift_item_activate_word_height"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/zzz_btn_gift_copy"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/zzz_copy_and_return"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zzz_game_list_button_text_size"/>

        <TextView
            android:id="@+id/zzz_activation_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zzz_gift_item_activate_word_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/zzz_gift_detail_activate_word_margin_left"
            android:layout_marginRight="@dimen/zzz_gift_item_copy_margin_left"
            android:layout_toLeftOf="@id/zzz_activation_key_copy"
            android:layout_toRightOf="@id/zzz_activation_text"
            android:background="@drawable/zzz_gift_gray_box"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/zzz_activation_key_paddingleft"
            android:singleLine="true"
            android:textColor="@color/zzz_main_green"
            android:textSize="@dimen/zzz_gift_item_key_text_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zzz_list_single_divider_height"
        android:layout_below="@id/zzz_gift_activation"
        android:background="@color/zzz_tabwidget_divider"/>

</RelativeLayout>