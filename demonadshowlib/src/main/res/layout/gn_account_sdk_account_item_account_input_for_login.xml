<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.gionee.account.sdk.core.widght.MyAutoCompleteTextView
        android:id="@+id/tn_edittext_actv"
        style="@style/gn_account_EditText_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gn_account_account_two_button_height"
        android:hint="@string/gn_account_login_edittext_prompt"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:phoneNumber="true"
        android:imeOptions="flagNoExtractUi" 
        android:singleLine="true" />

    <ImageView
        android:id="@+id/change_account_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gn_account_account_down_selector" />

</RelativeLayout>